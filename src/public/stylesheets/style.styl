@import 'nib'

/* Colors */
$color_main_bg = #F0F0F0
$color_text_large = #012139
$color_highlight = #FF9035
$color_anchor = #41528A

border-radius()
    -webkit-border-radius arguments
    -moz-border-radius arguments
    border-radius arguments

box-shadow()
    -webkit-box-shadow arguments
    -moz-box-shadow arguments
    box-shadow arguments

[class^="icon-"], 
[class*=" icon-"]
    background-image: url("../../images/glyphicons-halflings.png");

hr
    text-align center

.container-narrow
    margin 0 auto
    width 80%

.site-logo
    width 400px

.masthead
    background-position-x 100%
    background-position-y 80%
    min-height 20%

legend
    margin-bottom 5px
    line-height 25px

fieldset
    margin-bottom 20px

.jumbotron
    text-align center
    width 50%
    margin 0 auto
    
    & h1
       font-size 42px
   
    & .emp
        font-family gentium_book-bold_italic
        font-size 44.5px
        
.btn,
.nav-pills>li>a
    font-family TitilliumText25L400wt

.nav>li>a:hover,
.nav>li>a:focus
    background-color #FF9035
    color #EEE

$step-content-minHeight = 396px

#drop-zone
    border-width 4px
    border dashed #DDDDDD;
    background-color: white
    height $step-content-minHeight - (@border-width)*10

.row-fluid .span4
    width 30.9149%

.step-container
    border-radius: 2px;

    & h3
        font-family gentium_book-bold
        font-size 28px

.step-buttons
    clear both
    padding 2.5% 0

    & > input
        float left

#sequence-wrap
    margin 5% 12.5% 0
    overflow hidden

#accession
    margin-bottom 0

.form-signin
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        border-radius: 5px;
        box-shadow: 0 1px 2px rgba(0,0,0,.05);
      
      & .form-signin-heading,
      & .checkbox 
        margin-bottom: 10px;

      & input[type="text"],
      & input[type="password"] 
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      & .form-submit
        text-align center
        display block

#footer
    background-image url("../images/bg_footer.jpg");
    height: 220px;
    margin-bottom: 0;
    min-width: 960px;
    text-align: left;
    width: 100%;
    color: white
    clear both