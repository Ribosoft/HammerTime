@import 'nib'

/* Colors */
$color_main_bg = #F0F0F0
$color_text_large = #012139
$color_highlight = #FF9035
$color_anchor = #41528A

border-radius()
    -webkit-border-radius arguments
    -moz-border-radius arguments
    border-radius arguments

box-shadow()
    -webkit-box-shadow arguments
    -moz-box-shadow arguments
    box-shadow arguments

transition()
  -webkit-transition arguments
  -moz-transition arguments
  -ms-transition arguments
  -o-transition arguments
  transition arguments

body
    height 100%

.alert
    width 100% 

.big-container
    min-height 100%
    position relative

input[type="number"]
    width 56px

.invisible
    display none

.container-narrow
    margin 0 auto
    width 80%

.site-logo
    width 400px

.masthead
    background-position-x 100%
    background-position-y 80%
    min-height 20%
    width 90%
    margin 0 auto

.jumbotron
    text-align center
    width 50%
    margin 0 auto
    
    & h1
       font-size 48px
       line-height 115%
   
    & .emp
        font-family gentium_book-bold_italic
        font-size 50.5px
    
    & #start_now
        font-size 22px
        
.btn,
.nav-pills>li>a
    font-family TitilliumText25L400wt

$step-content-minHeight = 396px

#drop-zone
    border-width 4px
    border dashed #DDDDDD;
    background-color: white
    height $step-content-minHeight - (@border-width)*10

.row-fluid .tile
    width 40%
    margin-left 0

.container-marketing-tiles
    width 90%
    margin 0 auto
    overflow hidden

.marketing-tile
    width 26%
    margin 1% 1.5%
    padding 2%
    border-bottom 1px solid #DDDDDD;
    box-shadow 0 0 5px rgba(0, 0, 0, 0.6);
 
    & h3
        text-align center

.row-fluid .bar-separator
    float left
    text-align center

    & .filler
        min-height 150px

    & .emp
        font-family gentium_book-bold_italic
        font-size 28px

.step-container
    border-radius: 2px;

.substep-description
    font-size 14px

    & h3
        font-family gentium_book-bold
        font-size 28px

.step-buttons
    clear both
    padding 2.5% 0

    & > input
        float left

.input-selection,
#sequence-wrap
    margin 0% 12.5%
    overflow hidden

#drop
    text-align right

#accession
    margin-bottom 0

#design-form i
    margin-right 50%

#design-form.pressed
    float left

#design-form.smaller-form 
    width 50%
    & i
        margin-right 0%

.design-help
    width 49.5%
    float left

#region-help
    margin-bottom 17%

#target-help
    margin-bottom 14%

#env-help
    margin-bottom 33%

#cutsites-help
    margin-bottom 11%

#shape-help
    margin-bottom 2%
.form-signin
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        border-radius: 5px;
        box-shadow: 0 1px 2px rgba(0,0,0,.05);
      
      & .form-signin-heading,
      & .checkbox 
        margin-bottom: 10px;

      & input[type="text"],
      & input[type="password"] 
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      & .form-submit
        text-align center
        display block

#footer
    background #333;
    padding-top 1%
    height: 10em;
    text-align: left;
    color: white
    clear both
    position relative
    bottom 0
    font-family gentium_book-bold

    & .copyright
      width 90%
      margin 0 auto
      text-align right

.icon-question-sign:hover
    cursor pointer